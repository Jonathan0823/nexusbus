# Environment variables for Modbus Middleware

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/modbus_middleware
DATABASE_ECHO=false

# MQTT (Optional)
# Leave empty to disable MQTT support
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=modbus/data

# Application Settings
APP_NAME=Modbus Middleware
APP_VERSION=0.1.0
POLL_INTERVAL_SECONDS=5
